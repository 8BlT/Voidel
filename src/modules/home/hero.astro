---
import { BackgroundBeams } from "@/components/BackgroundBeams";
import { SourceCodeButton } from "@/components/SourceCodeButton";
---

<section
  class="h-screen rounded-md bg-neutral-950 relative flex flex-col items-center justify-center antialiased"
>
  <div
    class="h-screen w-full rounded-md bg-neutral-950 relative flex flex-col items-center justify-center antialiased"
  >
    <div class="max-w-2xl mx-auto p-4 relative z-10">
      <h1
        class="text-lg md:text-7xl bg-clip-text text-transparent bg-gradient-to-b from-neutral-200 to-neutral-600 text-center font-sans font-bold"
      >
        rimzzlabs.com <span class="sr-only">Rizki Maulana Citra</span>
      </h1>
      <p class="text-neutral-500 max-w-lg mx-auto my-2 text-sm text-center">
        Something is coming to my new website
      </p>
      <SourceCodeButton />
    </div>
    <BackgroundBeams client:load />
  </div>
</section>
