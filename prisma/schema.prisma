datasource db {
    provider     = "mysql"
    url          = env("PRISMA_DATABASE_URL_LOCAL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Comment {
    id         Int       @id @default(autoincrement())
    uuid       String    @unique
    slug       String
    created_at DateTime  @default(now())
    updated_at DateTime? @updatedAt
    user_email String
    user_name  String
    user_image String
    body       String    @db.Text

    @@index(id)
}

model Subcomment {
    id           Int       @id @default(autoincrement())
    uuid         String    @unique
    comment_uuid String
    slug         String
    created_at   DateTime  @default(now())
    updated_at   DateTime? @updatedAt
    user_email   String
    user_name    String
    user_image   String
    body         String    @db.Text

    @@index(id)
}
